extends layout
block content
  h1 #{title}
  div.jumbotron
    if email
      h2 Welcome back #{email}
      div.container
        div.row
          a#logoutlink(class='btn btn-default logout' href='logout') Log Out
          
          a#getMovies(class='btn btn-default getMovies' href='') View All Movies
          div#moviesContainer

          a#getGenres(class='btn btn-default getGenres' href='') View All Genres
          div#genresContainer
          
        div.favorites
          p My favorites
            ul
              each favorite in favorites
                li= favorite.title



    else
      h2 Hello Stranger!
      div.container
        div.row
          a#signupLink(class='btn btn-default signup' href='signup') Sign Up
          a#loginlink(class='btn btn-default login' href='login') Log In
